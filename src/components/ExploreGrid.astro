    </section>

    <!-- fila: Estadísticas + IA -->
    <div class="mt-6 grid md:grid-cols-2 gap-6">
        <div
            class="rounded-3xl border border-white/12 bg-white/[0.03] backdrop-blur-md p-6 md:p-7 shadow-[0_8px_40px_rgba(0,0,0,.35)]"
        >
            <h5 class="font-righteous text-[20px] text-grisclarotwo">
                Estadísticas
            </h5>

            <div class="mt-5 h-[160px] rounded-2xl relative overflow-hidden">
                <div
                    class="absolute inset-0"
                    style="background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,0));"
                >
                </div>
                <svg
                    viewBox="0 0 320 160"
                    class="absolute inset-0 w-full h-full"
                >
                    <defs>
                        <linearGradient id="area" x1="0" x2="0" y1="0" y2="1">
                            <stop offset="0%" stop-color="rgba(216,70,239,.45)"
                            ></stop>
                            <stop offset="100%" stop-color="rgba(216,70,239,0)"
                            ></stop>
                        </linearGradient>
                    </defs>
                    <path
                        d="M0 120 L40 98 L80 110 L120 80 L160 92 L200 62 L240 78 L280 56 L320 68"
                        fill="none"
                        stroke="rgba(216,70,239,.9)"
                        stroke-width="3"></path>
