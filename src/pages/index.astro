---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import ConnectText from "../components/ConnectText.astro";
import PricingSection from "../components/PricingSection.astro";
import IntroSplit from "../components/IntroSplit.astro";
import ExploreGrid from "../components/ExploreGrid.astro";
import HowItWorks from "../components/HowItWorks.astro";
import ImmersiveExperience from "../components/ImmersiveExperience.astro";
import First from "../components/First.astro";
import WebGL from "../components/Webgl.astro";
import CardDream from "../components/card-dream.astro";
import Footer from "../components/Footer.astro";

const page = {
  title: "Oniria — Tus sueños tienen algo que contarte",
  description: "Landing moderna, veloz y SEO-first en Astro + React.",
  url: new URL("/", Astro.site).href,
  image: new URL("/og.jpg", Astro.site).href,
};
---

<BaseLayout {...page}>
  <WebGL />
  <header class="md:h-screen">
    <Navbar />
    <First />
    <CardDream />
  </header>
  <IntroSplit />
  <!-- <ConnectText /> -->
  <ExploreGrid />
  <HowItWorks />
  <ImmersiveExperience />
  <PricingSection />
  <Footer />
</BaseLayout>
